
<!DOCTYPE digester-rules PUBLIC 
        "-//Jakarta Apache //DTD digester-rules XML V1.0//EN" 
        "http://jakarta.apache.org/commons/digester/dtds/digester-rules.dtd">
<digester-rules>
 <pattern value="technology-catalog">
  <object-create-rule classname="net.sf.minuteProject.loader.catalog.technologycatalog.node.TechnologyCatalog"/>
  <set-next-rule methodname="setTechnologyCatalog" paramtype="net.sf.minuteProject.loader.catalog.technologycatalog.node.TechnologyCatalog"/>
  <set-properties-rule/>
  <bean-property-setter-rule  propertyname="name" pattern="name"/>
  <pattern value="technologies">
   <object-create-rule classname="net.sf.minuteProject.loader.catalog.technologycatalog.node.Technology"/>
   <set-next-rule methodname="setTechnologies" paramtype="net.sf.minuteProject.loader.catalog.technologycatalog.node.Technology"/>
   <set-properties-rule>
		<alias attr-name="name" prop-name="name" />
		<alias attr-name="version" prop-name="version" />
		<alias attr-name="template-config-file-name" prop-name="templateConfigFileName" />
		<alias attr-name="template-dir" prop-name="templateDir" />
		<alias attr-name="depends-on-targets" prop-name="dependsOnTargets" />
   </set-properties-rule>
   <!--<bean-property-setter-rule  propertyname="name" pattern="name"/>
   <bean-property-setter-rule  propertyname="version" pattern="version"/>
   <bean-property-setter-rule  propertyname="templateConfigFileName" pattern="template-config-file-name"/>
   <bean-property-setter-rule  propertyname="templateDir" pattern="template-dir"/>
   <bean-property-setter-rule  propertyname="dependsOnTargets" pattern="depends-on-targets"/>-->
   <pattern value="limitations">
    <object-create-rule classname="net.sf.minuteProject.loader.catalog.technologycatalog.node.Limitation"/>
    <set-next-rule methodname="setLimitations" paramtype="net.sf.minuteProject.loader.catalog.technologycatalog.node.Limitation"/>
    <set-properties-rule/>
    <bean-property-setter-rule  propertyname="name" pattern="name"/>
    <bean-property-setter-rule  propertyname="type" pattern="type"/>
   </pattern>
   <pattern value="conventions">
    <object-create-rule classname="net.sf.minuteProject.loader.catalog.technologycatalog.node.Convention"/>
    <set-next-rule methodname="setConventions" paramtype="net.sf.minuteProject.loader.catalog.technologycatalog.node.Convention"/>
    <set-properties-rule/>
    <bean-property-setter-rule  propertyname="name" pattern="name"/>
    <bean-property-setter-rule  propertyname="type" pattern="type"/>
   </pattern>
  </pattern>
 </pattern>

</digester-rules>