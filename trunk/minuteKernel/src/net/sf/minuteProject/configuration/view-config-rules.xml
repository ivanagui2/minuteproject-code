<?xml version="1.0"?>

<!DOCTYPE digester-rules PUBLIC 
        "-//Jakarta Apache //DTD digester-rules XML V1.0//EN" 
        "http://jakarta.apache.org/commons/digester/dtds/digester-rules.dtd">
<digester-rules>
  <pattern value="view">
      <set-properties-rule/>
  	  <bean-property-setter-rule pattern="name"/>
	  <bean-property-setter-rule pattern="description"/>
	  <bean-property-setter-rule pattern="projectname"/>
	  <pattern value="service">
   	      <object-create-rule classname="net.sf.minuteProject.configuration.bean.view.Service"/>
		  <set-properties-rule/>	
		  <bean-property-setter-rule pattern="name"/>
		  <bean-property-setter-rule pattern="description"/>
		  <set-next-rule methodname="addService" paramtype="net.sf.minuteProject.configuration.bean.view.Service"/>	 
		  <pattern value="function"> 
   	      <object-create-rule classname="net.sf.minuteProject.configuration.bean.view.Function"/>
		  <set-properties-rule/>	
		  <bean-property-setter-rule pattern="name"/>
		  <bean-property-setter-rule pattern="description"/>
		  <bean-property-setter-rule pattern="method"/>
		  <set-next-rule methodname="addFunction" paramtype="net.sf.minuteProject.configuration.bean.view.Function"/>	 		  
			  <pattern value="input">
				<object-create-rule classname="net.sf.minuteProject.configuration.bean.view.Input"/>	  
				<set-next-rule methodname="setInput" paramtype="net.sf.minuteProject.configuration.bean.view.Input"/>		  
				<pattern value="param">
					<object-create-rule classname="net.sf.minuteProject.configuration.bean.parameter.Parameter"/>		
					<set-next-rule methodname="addParameter" paramtype="net.sf.minuteProject.configuration.bean.parameter.Parameter"/>		
					<set-properties-rule/>	
					<bean-property-setter-rule pattern="name"/>	
					<bean-property-setter-rule pattern="mandatory"/>	
					<bean-property-setter-rule pattern="type"/>	
				</pattern>
			  </pattern>
			  <pattern value="output">
				<object-create-rule classname="net.sf.minuteProject.configuration.bean.view.Output"/>	  
				<set-next-rule methodname="setOutput" paramtype="net.sf.minuteProject.configuration.bean.view.Output"/>		  
				<pattern value="param">
					<object-create-rule classname="net.sf.minuteProject.configuration.bean.parameter.Parameter"/>		
					<set-next-rule methodname="addParameter" paramtype="net.sf.minuteProject.configuration.bean.parameter.Parameter"/>		
					<set-properties-rule/>	
					<bean-property-setter-rule pattern="name"/>	
					<pattern value="logicalLink">
						<object-create-rule classname="net.sf.minuteProject.configuration.bean.parameter.LogicalLink"/>		
						<set-next-rule methodname="setLogicalLink" paramtype="net.sf.minuteProject.configuration.bean.parameter.LogicalLink"/>		
						<pattern value="model-entity">
							<object-create-rule classname="net.sf.minuteProject.configuration.bean.model.Entity"/>		
							<set-next-rule methodname="setEntity" paramtype="net.sf.minuteProject.configuration.bean.model.Entity"/>		
							<set-properties-rule/>	
							<bean-property-setter-rule pattern="refname"/>	
							<pattern value="entity-field">
								<object-create-rule classname="net.sf.minuteProject.configuration.bean.model.Field"/>		
								<set-next-rule methodname="addField" paramtype="net.sf.minuteProject.configuration.bean.model.Field"/>		
								<set-properties-rule/>	
								<bean-property-setter-rule pattern="refname"/>
							</pattern>
						</pattern>
					</pattern>
				</pattern>
			  </pattern>
			  <pattern value="query">
				<object-create-rule classname="net.sf.minuteProject.configuration.bean.view.Query"/>	  
				<set-next-rule methodname="setQuery" paramtype="net.sf.minuteProject.configuration.bean.view.Query"/>		  
			    <bean-property-setter-rule pattern="name"/>
			    <bean-property-setter-rule pattern="value"/>
			  </pattern>
		  </pattern>
	 </pattern>
	 <pattern value="target">
		<object-create-rule classname="net.sf.minuteProject.configuration.bean.Target"/>	  
		<set-next-rule methodname="setTarget" paramtype="net.sf.minuteProject.configuration.bean.Target"/>		  
	    <set-properties-rule/>	
	    <bean-property-setter-rule pattern="refname"/>	 
	    <bean-property-setter-rule pattern="name"/>	 
	 </pattern>
  </pattern>	  
</digester-rules>
