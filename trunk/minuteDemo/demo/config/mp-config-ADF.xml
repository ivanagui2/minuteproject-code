        <model name="petshop" version="1.0" package-root="net.sf.mp.demo">          
            <data-model>
                <driver groupId="org.apache.derby" artifactId="derby" version="10.8.1.2"/>
                <fileSource name="petshop" dir="c:/MinuteProject/data">
                </fileSource>
                <!--
                <dataSource>    
