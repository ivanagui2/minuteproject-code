                     <!-- badge queries -->
                     <query name="winery_product_badge" id="winery_product_badge" package-name="badge">
                         <query-body>
                         <value>
<![CDATA[
select count(*) nb_of_products, w.grades grades, w.name winery, w.description description 
from product p, winery w
where p.winery_id = w.id 
and w.id = ?
group by w.name, w.grades
 order by winery desc
]]>
                            </value>
                         </query-body>
                         <query-params>
                         	<query-param name="winery_id" is-mandatory="true" type="int" sample="-1"></query-param>
                         </query-params>
                     </query>
                     <query name="product_product_item_badge" id="product_product_item_badge" package-name="badge">
                         <query-body>
                         <value>
<![CDATA[
select count(*) nb_of_items , p.name, p.detail
from product p, product_item pi
where pi.product_id = p.id 
and p.id = ?
group by p.name
 order by p.name desc
 
  select count(pi.id) nb_of_items , count(a.id) nb_of_awards , p.name, p.image_url, p.is_bio, p.grades
from product p left outer join product_item pi on
 pi.product_id = p.id 
 left outer join award a on a.product_id = a.id
 where p.active = true
 $whereproductid
group by p.id
 order by p.name desc
]]>
                            </value>
                         </query-body>
                         <query-params>
                         	<query-param name="product_id" is-mandatory="true" type="int" sample="-1"></query-param>
                         </query-params>
