					<condition type="package" startsWith="REGIONS" result="hr"></condition>
					<condition type="package" startsWith="PS_TXN" result="hr"></condition>
				</business-package>	
				
				<enrichment>
				   <conventions>
				      <primary-key-convention type="apply-primary-key-on-entity-with-two-columns-only-and-foreign-key-otherwise-specified" />
				      <primary-key-convention type="apply-default-primary-key-otherwise-first-one" />
				      <entity-content-type-convention type="apply-content-type-to-entity-starting-with" pattern="I18N_" content-type="reference-data"/>
				      <entity-content-type-convention type="apply-content-type-to-entity-ending-with" pattern="_TYPE,_STATE,_CODE" content-type="reference-data"/>
				      <entity-semantic-reference-convention  pattern="CODE,LANGUAGE_CODE" description="LABEL" content-type="reference-data"/>
				      <property-convention scope="field" pattern="CREATED_ON" tag="trigger-insert-with-current-date" type="start-with"/>
				      <property-convention scope="field" pattern="LAST_UPDATED_ON" tag="trigger-insert-update-with-current-date" type="start-with"/>
				      <reference-naming-convention type="apply-referenced-alias-when-no-ambiguity" is-to-plurialize="true"></reference-naming-convention>
				      <check-constraint-convention field-pattern ="active" field-pattern-type="equals" field-content-type="string">
				      		<property name="true" value="T"></property>
				      		<property name="false" value="F"></property>
				      </check-constraint-convention>
				      <sql-mapping-convention type="varchar2-used-instead-of-varchar"></sql-mapping-convention>
				   </conventions>
				</enrichment>					
			</business-model>

