@import 'abstracts/colors';

.k-content {
    margin: 0px;
}

html {
    min-height: 100%;
    background-color: $color-light-grey;
    border-right: 1px solid #cccccc;
    margin: 0;
    padding: 0;
}


.customMenu {
    display: table;
    width: 100%;
    font-size: 14px;
    margin: 0 auto;
    margin-top: 0px;
    border-collapse: collapse;
    background-color: $color-light-grey;
}

/**/
.row {
    display: table-row;
    text-align: center;
    padding-left: 10px;
    padding-right: 10px;
}

.row-default {
    display: table-row;
    text-align: center;
    padding-left: 10px;
    padding-right: 10px;
}

.cell {
    display: table-cell;
    vertical-align: bottom;
    height: 15px;
    padding-top: 5px;
    text-align: left;
}

.cell-label {
    display: table-cell;

    vertical-align: bottom;
    height: 15px;
    padding-top: 5px;
    text-align: left;
    font-weight: bold;
}

.rowMenuLinkFirst {
    display: table-row;
    border-bottom: 1px solid $color-pale-blue;
    border-top: 1px solid $color-pale-blue;
}

.rowMenuLink {
    display: table-row;
    border-bottom: 1px solid $color-pale-blue;
}

.cellMenuLink {
    display: table-cell;
    height: 30px;
    cursor: auto;
    text-align: center;
    text-decoration: none;
    vertical-align: middle;
}

.cellMenuLink:hover {
    display: table-cell;
    background-color: $color-deep-blue;
    color: white;
    text-decoration: none;
    vertical-align: middle;
}

.cellMenuLinkSelected, .cellMenuLinkSelected>a {
    background-color: $color-deep-blue;
    color: white;
}

.menuLink {
    display: block;
    padding-top: 12px;
    height: 30px;
    color: $color-dark-blue;
    text-decoration: none;
    text-align: center;
    outline: none;
}

.menuLink:hover {
    color: white;
}

.menuLinkManageEntity {
    display: block;
    padding: 2px 10px 2px 10px;
    height: 40px;
    color: $color-dark-blue;
    text-decoration: none;
    text-align: center;
}

.menuLinkManageEntity:hover {
    color: white;
}

.menuLinkFT {
    display: block;
    font-size: 13px;
    height: 30px;
    text-decoration: none;
    text-align: center;
    color: $color-dark-blue;
    outline: none;
    margin: 0 auto;
    width: 95%;
}

.buttonNewEntity {
    display: block;
    margin: 0 auto;
    font-weight: bold;
    font-size: 13px;
    height: 40px;
    width: 140px;
    color: white;
    border: none;
    background-color: $color-deep-blue;
    margin-top: 14px;
    text-align: center;
    text-transform: uppercase;
    outline: none;
}

.buttonNewEntity:hover {
    cursor: pointer;
    background-color: $color-light-blue;
}

.adminMenuLabel {
    font-size: 14px;
    text-transform: uppercase;
    color: #696969;
}

.rowAdminMenu {
    display: table-row;
    border-bottom: 1px solid $color-pale-blue;
}

.cellAdminMenu {
    height:30px;
    text-align: left;
    padding-left: 7px;
}

.adminSectionTable {
    display: table;
    width: 100%;
}

.adminRowMenuLink {
    display: table-row;
    border-bottom: 1px solid $color-pale-blue;
    width: auto;
}

.adminCellMenuLink {
    display: table-cell;
    font-size: 13px;
    height: 20px;
    cursor: auto;
    text-align: left;
    text-decoration: none;
    vertical-align: middle;
    padding: 3px 0 3px 7px;
}

.adminCellMenuLink:hover {
    background-color: $color-deep-blue;
    color: white;
}

.adminMenuLink {
    display: block;
    width: 100%;
    color: $color-dark-blue;
    text-decoration: none;
    outline: none;
}

.adminMenuLink:hover {
    color: white;
}

.button-icon-plus {
	background: url("../icon/plus_h.png") no-repeat 5px 50%;
}

/* Button with icons*/
.button-icon-16px {
	display: inline-block;
	border: 1px solid $color-pale-blue;
	padding: 5px 15px;
	text-decoration: none;
	color: $color-dark-blue;
	font-size: 13px;
	cursor: pointer;
	outline: none;
}
.button-icon-16px span {
	padding-left:15px;
}
.button-icon-16px:hover:not([disabled]):not(.k-state-disabled) {
	background-color: $color-light-blue;
	border: 1px solid $color-light-blue;
}


/* Icons */
.icon-16px {
	display: inline-block;
	width: 16px;
	height: 16px;
	cursor: pointer;
	outline: none;
	overflow: hidden;
}
.icon-16px:hover {
	background-position: 0 0;
}

.textbox-icon {
    display: block;
    border: 1px solid $color-light-medium-grey;
    margin: 0px;
    margin-top: 2px;
    padding: 0px;
    width: 100%;
    overflow: hidden;
    height: 30px;
    min-height: 30px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.textbox-icon>input, .textbox-icon>div, .textbox-icon>textarea {
    display: inline-block;
    font: inherit;
    color: inherit;
    border: 0px;
    padding: 6px 2px 4px 4px;
    margin: 0;
    width: 90%;
    height: 100%;
    line-height: 15px;
    overflow-y: auto;
    text-overflow: ellipsis;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.textbox-icon>a {
    float: right;
    width: 16px;
    height: 100%;
    padding: 0;
    margin: 0px 3px 0px 2px;
    border: 0;
    cursor: pointer;
    outline: none;
}
.textbox-icon>a:hover {
    background-position: 0 50% !important;
}
.textbox-icon>input[readonly="readonly"], .textbox-icon>textarea[readonly="readonly"] {
    width: 100% !important;
}
.textbox-icon>input[readonly="readonly"]+a, .textbox-icon>textarea[readonly="readonly"]+a {
    display: none;
}
.k-grid td {
    border-color: transparent;
}

.k-grid tbody>tr {
    cursor: pointer;
}

.k-grid tbody>tr:hover {
    background-color: $color-deep-blue-plus;
    color: white;
}

.k-grid tbody>tr>td>a:hover {
    color: white;
}

.button, .buttonCancel, .buttonRed, .buttonGreen {
    display: inline-block !important;
    font-family: inherit;
    font-size: 13px !important;
    text-align: center;
    min-width: 120px;
    height: 30px !important;
    background-color: $color-deep-blue;
    color: #FFFFFF;
    border: 1px solid $color-deep-blue;
    padding: 4px;
    cursor: pointer;
    outline: none;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.button:hover:not(.k-state-disabled), .buttonCancel:hover:not(.k-state-disabled), 
.buttonRed:hover:not(.k-state-disabled), .buttonGreen:hover:not(.k-state-disabled) {
    background-color: $color-light-blue;
    border: 1px solid $color-light-blue;
}
.buttonCancel, .buttonRed, .buttonGreen {
    background-color: #FFFFFF;
    color: $color-deep-blue;
}
.buttonRed, .buttonGreen {
    border: 1px solid $color-light-medium-grey;
    padding: 0px 8px;
}
.buttonRed {
    color: #BF5E54;
}
.buttonGreen {
    color: #368037;
}
