#exposeMaven()
#exposeBackendTechnology()
#exposePom()
<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>${groupId}</groupId>
	<artifactId>${artifactId}</artifactId>
	<version>${versionId}</version>
	<packaging>ear</packaging>
	<name>${mavenReleaseName}</name>

	<build>
	  <plugins>
	    <plugin>
	      <artifactId>maven-compiler-plugin</artifactId>
	      <configuration>
	        <source>1.6</source>
	        <target>1.6</target>
	        <encoding>UTF-8</encoding>
	      </configuration>
	    </plugin>
	    <plugin>
	      <artifactId>maven-ear-plugin</artifactId>
	      <configuration>
	        <version>1.4</version>
	        <modules>
	          <webModule>
	            <groupId>${groupId}</groupId>
	            <artifactId>${mavenReleaseWebName}</artifactId>
				<bundleFileName>${mavenReleaseWebName}.war</bundleFileName>
	            <contextRoot>/${mavenReleaseWebName}</contextRoot>
	          </webModule>
	          <ejbModule>
	            <groupId>${groupId}</groupId>
	            <artifactId>${mavenReleaseEjbName}</artifactId>
				<bundleFileName>${mavenReleaseEjbName}.jar</bundleFileName>
	          </ejbModule>
	        </modules>
	        <displayName>Ear Name displayed in the App Server</displayName>
	        <!-- If I want maven to generate the application.xml, set this to true -->
	        <generateApplicationXml>true</generateApplicationXml>
	      </configuration>
	    </plugin>
	    <plugin>
	      <artifactId>maven-resources-plugin</artifactId>
	      <version>2.3</version>
	      <configuration>
	        <encoding>UTF-8</encoding>
	      </configuration>
	    </plugin>
	  </plugins>
	  <finalName>${mavenFinalName}</finalName>
	</build>

<!-- Define the versions of your ear components here -->
	<dependencies>
	  <dependency>
	    <groupId>${groupId}</groupId>
	    <artifactId>${mavenReleaseWebName}</artifactId>
	    <version>${versionId}</version>
	    <type>war</type>
	  </dependency>
	  <dependency>
	    <groupId>${groupId}</groupId>
	    <artifactId>${mavenReleaseEjbName}</artifactId>
	    <version>${versionId}</version>
	    <type>ejb</type>
	  </dependency>
	</dependencies>
</project>